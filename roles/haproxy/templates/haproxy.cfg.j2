global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /var/run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

# Main frontend - routes all traffic to gateway
frontend main_frontend
    bind *:80
    default_backend gateway_backend

# Gateway backend - all requests go through the gateway
backend gateway_backend
    server gateway1 127.0.0.1:{{ app_services[0].port }} check
